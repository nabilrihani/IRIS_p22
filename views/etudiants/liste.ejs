<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Liste des étudiants</title>
</head>
<body>
    <%- include('../partials/navbar'); %>


   
    <!-- Affichage des etudiants dans un tableau avec les buttons : supprimer/modifier -->
     <h1>Liste des étudiants</h1>
<a  class="btn btn-outline-success" href="/etudiants/ajouter">Ajouter un étudiant</a>



<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Nom</th> 
      <th scope="col">Prenom</th>
      <th scope="col">Email</th>
      <th scope="col">Age</th>
      <th scope="col">Addresse</th>
      <th scope="col">Actions</th>
    </tr>
       <% etudiants.forEach(etudiant => { %>
  </thead>
  <tbody >
    <tr>
      <th scope="row"><%= etudiant.nom %></th>
      <td><%= etudiant.prenom %></td>
      <td><%= etudiant.email %></td>
      <td><%= etudiant.age %></td>
      <td><%= etudiant.Adresse %></td>
      <td>
        <a class="btn btn-warning" href="/etudiants/modifier/<%= etudiant._id %>">Modifier</a>
            <form action="/etudiants/supprimer/<%= etudiant._id %>" method="POST" style="display:inline;">
                <button class="btn btn-danger" type="submit" onclick="return confirm('Voulez-vous vraiment supprimer ?')">Supprimer</button>
            </form>
        </td>
    </tr>
    <% }) %>
  </tbody>
</table>
</body>
</html>
